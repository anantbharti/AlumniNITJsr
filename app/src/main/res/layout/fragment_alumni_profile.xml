<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#cfcfcf"
    tools:context=".fragments.AlumniProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:id="@+id/ll_top"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_top_vector"
        android:adjustViewBounds="true"
        android:layout_below="@id/ll_top"
        android:id="@+id/vec_top"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="15dp"
                android:id="@+id/pro_img_card">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:id="@+id/pro_img"
                        android:src="@drawable/profile_512"
                        android:layout_centerHorizontal="true"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#EFEEEE"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textSize="22sp"
                        android:textColor="#222222"
                        android:id="@+id/pro_name"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:layout_below="@+id/pro_img"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pro_name"
                        android:text="Bio"
                        android:id="@+id/pro_bio"
                        android:padding="2dp"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="40dp"
                        android:textAlignment="center"
                        android:layout_marginBottom="12dp"
                        android:textColor="#000000"
                        android:gravity="center_horizontal" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_linkedin"
                        android:id="@+id/alumni_linked_in"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_link"
                        android:id="@+id/alumni_web"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_facebook"
                        android:id="@+id/alumni_fb"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_twitter"
                        android:id="@+id/alumni_twitter"
                        android:layout_weight="1"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:text="About"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:id="@+id/pro_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="Born on 6 Feb" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pro_batch"
                        android:padding="2dp"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text="Batch of 2005" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:id="@+id/pro_branch"
                        android:padding="2dp"
                        android:text="Electrical and Electronics engineering"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:id="@+id/pro_profession"
                        android:padding="2dp"
                        android:text="Profession: SDE" />
                    <TextView
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:id="@+id/pro_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="Position: Associate Engineer" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="12dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:textSize="15sp"
                        android:text="Contact"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:textSize="16sp"
                        android:padding="2dp"
                        android:id="@+id/pro_cur_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="Lives at California, US" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pro_hometown"
                        android:padding="2dp"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:text="From Jamshedpur, India" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:id="@+id/pro_email"
                        android:padding="2dp"
                        android:text="E-mail id: xyz@gmail.com"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:id="@+id/pro_mobile"
                        android:padding="2dp"
                        android:text="Phone: 1234567890" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>